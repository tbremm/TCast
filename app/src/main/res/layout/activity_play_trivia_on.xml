<RelativeLayout
    android:id="@+id/rl_trivia_main_on"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/blue_orange_background"
    tools:context="com.adventurpriseme.tcast.PlayTriviaActivity">

    <!-- This is a "strut" to mark the middle of the view. This is a hack-workaround to divide the screen in half -->
    <View
        android:id="@+id/strut_Center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <!-- This is a "strut" to mark the bottom-middle of the view. -->
    <View
        android:id="@+id/strut_BottomCenter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"/>
    <!--
        <ImageView
            android:id="@+id/img_thought_bubble"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/strut_Center"
            android:src="@drawable/pd_thought_bubble_outline_half_long"
            android:contentDescription="@string/cd_center_strut"/>
        <!-     android:src="@drawable/pd_thought_bubble_outline_half_long"
             android:contentDescription="@string/cd_thought_bubble_outline"/>
             -->

    <TextView
        android:id="@+id/tvPlayTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:paddingTop="16dp"
        android:text="@string/true_or_false"
        android:textColor="#000000"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_below="@id/tvQuestion"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/true_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/str_true"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/false_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/str_false"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/getQuestion_btn"
        android:text="@string/get_question_btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

</RelativeLayout>
