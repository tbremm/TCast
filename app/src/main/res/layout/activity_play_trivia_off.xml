<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_trivia_main_off"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.adventurpriseme.tcast.PlayTriviaActivity">

    <!-- Background image -->
    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/cd_play_trivia_off_bg"/>

    <!-- User prompt to connect and start the game -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textStyle="italic"
        android:textSize="@dimen/abc_action_bar_title_text_size"
        android:text="@string/click_to_start"
        />

    <CheckBox
        android:id="@+id/checkbox_willHost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:enabled="true"
        android:onClick="onCheckBoxClicked"
        android:text="@string/willingToHost"
        android:textStyle="bold"
        android:typeface="normal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/checkbox_willHost"
        android:text="@string/inst_check_box_to_host"/>

</RelativeLayout>
